%h2 新規登録
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  = f.input :email, autofocus: true, :input_html => { :class => 'form-control' }
  = f.input :password, autocomplete: "off", :input_html => { :class => 'form-control' }, :hint => t(:'simple_form.hints.user.password_regist', :min_length => @minimum_password_length.to_s)
  = f.input :password, autocomplete: "off", :input_html => { :class => 'form-control' }, :label => t(:'simple_form.labels.user.password_confirmation'), :hint => t(:'simple_form.hints.user.password_confirmation')
  = f.input :postal_code, autocomplete: "postal-code", :input_html => { :class => 'form-control' }
  = f.input :address_level1, autocomplete: "address-level1", :input_html => { :class => 'form-control' }
  = f.input :address_level2, autocomplete: "address-level2", :input_html => { :class => 'form-control' }
  = f.input :address_line1, autocomplete: "address-line1", :input_html => { :class => 'form-control' }
  = f.input :address_line2, autocomplete: "address-line2", :input_html => { :class => 'form-control' }
  = f.input :family_name, autocomplete: "family-name", :input_html => { :class => 'form-control' }
  = f.input :given_name, autocomplete: "given-name", :input_html => { :class => 'form-control' }
  = f.submit "新規登録", :class => 'btn btn-default'
= render "devise/shared/links"