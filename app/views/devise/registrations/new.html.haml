%h2 新規登録
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),:html => { :class => 'form-horizontal' }) do |f|
  = devise_error_messages!
  = f.input :email, autofocus: true, :input_html => { :class => 'form-control' }
  = f.input :password, autocomplete: "off", :input_html => { :class => 'form-control' }, :label => t(:'simple_form.labels.user.password', :min_length => @minimum_password_length)
  = f.input :password, autocomplete: "off", :input_html => { :class => 'form-control' }, :label => t(:'simple_form.labels.user.password_confirmation'), :hint => t(:'simple_form.hints.user.password_confirmation')
  = f.input :post_code, autofocus: true, :input_html => { :class => 'form-control' }
  = f.input :address, autofocus: true, :input_html => { :class => 'form-control' }
  = f.submit "新規登録", :class => 'btn-primary'
= render "devise/shared/links"