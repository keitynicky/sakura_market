%h2
  ご購入手続き
.panel-group
  .panel.panel-default
    .panel-heading
      お届け先住所
    .panel-body
      -# = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .row
        .col-sm-4
          郵便番号
        .col-sm-8
      .row
        .col-sm-4
          住所
        .col-sm-8
      .row
        .col-sm-4
          名前（姓）
        .col-sm-8
      .row
        .col-sm-4
          名前（名）
        .col-sm-8            
  .panel.panel-default
    .panel-heading
      配送情報
    .panel-body
      .row
        .col-sm-4
          配送日時
        .col-sm-8
  .panel.panel-default
    .panel-heading
      ご購入額合計
    .panel-body  
      .row
        .col-sm-4
          商品合計金額(税抜き)
        .col-sm-8
          = disp_money @order.subtotal
      .row
        .col-sm-4
          代引き手数料
        .col-sm-8
          = disp_money @order.cash_on_delivery
      .row
        .col-sm-4
          送料
        .col-sm-8
          = disp_money @order.shipping
      .row
        .col-sm-4
          消費税
        .col-sm-8
          = disp_money @order.tax
    .panel-heading
      総額
    .panel-body  
      .row
        .col-sm-4
        .col-sm-8
          %strong
            = disp_money @order.total
      
          