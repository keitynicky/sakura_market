%h2
  ご購入手続き
= simple_form_for(current_order, url: check_out_path(current_order), html: { method: :put }) do |f|
  .panel.panel-default
    .panel-heading
      配送情報
    .panel-body
      .row
        .col-sm-4
          %strong
            配送日時
        .col-sm-8
          %label.control-label.string.optional
            配送日
            #datepicker-container
              = f.text_field :delivery_date, :class => "form-control"
            %label.control-label.string.optional            
              時間帯
            = f.select :delivery_time, options_for_select(["8-12", "12-14", "14-16", "16-18", "18-20", "20-21"]), {}, :class => "form-control"
  .panel.panel-default
    .panel-heading
      ご購入額合計
    .panel-body  
      .row
        .col-sm-4
          商品合計金額(税抜き)
        .col-sm-8
          = disp_money @order.subtotal
      .row
        .col-sm-4
          代引き手数料
        .col-sm-8
          = disp_money @order.cash_on_delivery
      .row
        .col-sm-4
          送料
        .col-sm-8
          = disp_money @order.shipping
      .row
        .col-sm-4
          消費税
        .col-sm-8
          = disp_money @order.tax
    .panel-heading
      総額
    .panel-body  
      .row
        .col-sm-4
        .col-sm-8
          %strong
            = disp_money @order.total
  = f.submit "確認画面へ", :class => 'btn btn-primary pull-right'
        
            