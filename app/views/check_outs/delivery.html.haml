= render "checkout_progress", progress_info: get_progress_info(2)          
= simple_form_for(@order, url: check_out_path(@order)) do |f|
  .panel.panel-default
    .panel-heading
      配送情報
    .panel-body
      .row
        .col-sm-4
          %strong
            配送日時
        .col-sm-8
          %label.control-label.string.optional
            #datepicker-container
              = f.input :delivery_date, as: :string
            %label.control-label.string.optional            
              時間帯
            = f.select :delivery_time, options_for_select(["8-12", "12-14", "14-16", "16-18", "18-20", "20-21"]), {}, class: "form-control"
  = f.submit "次へ", class: 'btn btn-primary pull-right'
        
            